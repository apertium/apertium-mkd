<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="mak-morph">
    <pipeline>
      <program name="lt-proc -w">
        <file name="mak.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="mak-gener">
    <pipeline>
      <program name="lt-proc -g">
        <file name="mak.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="mak-tagger">
    <pipeline>
      <program name="lt-proc -w">
        <file name="mak.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="mak.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="mak-disam">
    <pipeline>
      <program name="lt-proc -w">
        <file name="mak.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-mak.mak.rlx"/>
      </program>
    </pipeline>
  </mode>


</modes>
